{
  "exclude": ["node_modules", "build/**/*", "**/*.test.ts", "src/__mock__/**"],
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "lib": ["es6", "DOM"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false
  }
}
